<Window x:Class="GIBDD.View.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GIBDD.View"
        mc:Ignorable="d"
        FontSize="18"
        Title="Регистрация" 
        Width="700"
        SizeToContent="Height"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        Background="#F9F9F9">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock 
            Text="Регистрация" 
            FontSize="24" 
            FontWeight="Bold" 
            HorizontalAlignment="Center" 
            Margin="0,20,0,20"/>

        <!-- Поле для ввода логина -->
        <TextBlock 
            Text="Логин:" 
            Grid.Row="1" 
            Margin="0,10,0,5" 
            VerticalAlignment="Center"/>
        <TextBox 
            Name="txtLogin"
            Text="{Binding Login}"
            Grid.Row="2" 
            Height="30" 
            Margin="0,0,0,10" 
            Padding="5" 
            BorderBrush="#CCCCCC" 
            BorderThickness="1" 
            Background="#FFFFFF"/>
        <TextBlock
            Text="{Binding LoginErrMsg}"
            Grid.Row="3"
            Margin="0,10,0,5" 
            VerticalAlignment="Center"
            FontSize="12"
            Foreground="Red"/>
        
        
        <!-- Поле для ввода пароля -->
        <TextBlock 
            Text="Пароль:" 
            Grid.Row="4" 
            Margin="0,10,0,5" 
            VerticalAlignment="Center"/>
        <PasswordBox 
            Name="txtPassword" 
            Grid.Row="5" 
            Height="30" 
            Margin="0,0,0,10" 
            Padding="5" 
            BorderBrush="#CCCCCC" 
            BorderThickness="1" 
            Background="#FFFFFF"/>

        <!-- Поле для подтверждения пароля -->
        <TextBlock 
            Text="Подтвердите пароль:" 
            Grid.Row="7" 
            Margin="0,10,0,5" 
            VerticalAlignment="Center"/>
        <PasswordBox 
            Name="txtConfirmPassword" 
            Grid.Row="8" 
            Height="30" 
            Margin="0,0,0,10" 
            Padding="5" 
            BorderBrush="#CCCCCC" 
            BorderThickness="1" 
            Background="#FFFFFF"/>
        <TextBlock
            Text="{Binding PasswordErrMsg}"
            Grid.Row="9"
            Margin="0,10,0,5" 
            VerticalAlignment="Center"
            FontSize="12"
            Foreground="Red"/>
        
        <!-- Поле для ввода email -->
        <TextBlock 
            Text="Водительское удостоверение:" 
            Grid.Row="10" 
            Margin="0,10,0,5" 
            VerticalAlignment="Center"/>
        <TextBox 
            Name="txtDriverLicense" 
            Text="{Binding DriverLicense}"
            Grid.Row="11" 
            Height="30" 
            Margin="0,0,0,10" 
            Padding="5" 
            BorderBrush="#CCCCCC" 
            BorderThickness="1" 
            Background="#FFFFFF"/>
        <TextBlock
            Text="{Binding DriverLicenseErrMsg}"
            Grid.Row="12"
            Margin="0,10,0,5" 
            VerticalAlignment="Center"
            FontSize="12"
            Foreground="Red"/>
        
        <!-- Кнопка регистрации -->
        <Button 
            x:Name="Register"
            Content="Зарегистрироваться" 
            Grid.Row="13" 
            Width="auto"
            Padding="20 0"
            Height="35" 
            HorizontalAlignment="Right" 
            Margin="0,20,0,10" 
            Background="#0078D7" 
            Foreground="White" 
            FontWeight="Bold" 
            Cursor="Hand" 
            Click="Register_Click"/>
    </Grid>
</Window>
