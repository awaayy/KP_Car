<Window x:Class="GIBDD.View.AddDriver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GIBDD.View"
        mc:Ignorable="d"
        Title="Добавление водителя" 
        FontSize="18"
        Width="600"
        Height="auto"
        WindowStartupLocation="CenterScreen"
        Background="#F9F9F9">

    <ScrollViewer>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <!-- Фамилия -->
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <!-- Серия паспорта -->
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <!-- Дом -->
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock 
         Text="Добавление водителя" 
         FontSize="24" 
         FontWeight="Bold" 
         HorizontalAlignment="Center" 
         Margin="0,10,0,20"/>

            <TextBlock 
         Text="Фамилия:" 
         Grid.Row="1" 
         Margin="0,10,0,5" 
         VerticalAlignment="Center"/>
            <TextBox 
         Name="txtLastName" 
         Text="{Binding SurName}"
         Grid.Row="2" 
         Margin="0,0,0,10" 
         Padding="5" 
         BorderBrush="#CCCCCC" 
         BorderThickness="1" 
         Background="#FFFFFF"/>

            <TextBlock 
         Text="Имя:" 
         Grid.Row="3" 
         Margin="0,10,0,5" 
         VerticalAlignment="Center"/>
            <TextBox 
         Name="txtFirstName" 
         Text="{Binding FirstName}"
         Grid.Row="4" 
         Margin="0,0,0,10" 
         Padding="5" 
         BorderBrush="#CCCCCC" 
         BorderThickness="1" 
         Background="#FFFFFF"/>

            <TextBlock 
         Text="Отчество:" 
         Grid.Row="5" 
         Margin="0,10,0,5" 
         VerticalAlignment="Center"/>
            <TextBox 
         Name="txtMiddleName" 
         Text="{Binding Patronymic}"
         Grid.Row="6" 
         Margin="0,0,0,10" 
         Padding="5" 
         BorderBrush="#CCCCCC" 
         BorderThickness="1" 
         Background="#FFFFFF"/>

            <TextBlock 
         Text="Дата рождения:" 
         Grid.Row="7" 
         Margin="0,10,0,5" 
         VerticalAlignment="Center"/>
            <DatePicker 
         Name="dpBirthDate" 
         SelectedDate="{Binding BirthDay}"
         Grid.Row="8"  
         Margin="0,0,0,10" 
         BorderBrush="#CCCCCC" 
         BorderThickness="1" 
         Background="#FFFFFF"/>

            <TextBlock 
         Text="Серия паспорта:" 
         Grid.Row="9" 
         Margin="0,10,0,5" 
         VerticalAlignment="Center"/>
            <TextBox 
         Name="txtPassportSeries" 
         Text="{Binding SeriesPassport}"
         MaxLength="4"
         Grid.Row="10" 
         Margin="0,0,0,10" 
         Padding="5" 
         BorderBrush="#CCCCCC" 
         BorderThickness="1" 
         Background="#FFFFFF"/>

            <TextBlock 
         Text="Номер паспорта:" 
         Grid.Row="11" 
         Margin="0,10,0,5" 
         VerticalAlignment="Center"/>
            <TextBox 
         Name="txtPassportNumber" 
         Text="{Binding NumberPassport}"
         MaxLength="8"
         Grid.Row="12" 
         Margin="0,0,0,10" 
         Padding="5" 
         BorderBrush="#CCCCCC" 
         BorderThickness="1" 
         Background="#FFFFFF"/>

            <TextBlock 
         Text="Город:" 
         Grid.Row="13" 
         Margin="0,10,0,5" 
         VerticalAlignment="Center"/>
            <TextBox 
         Name="txtCity" 
         Text="{Binding City}"
         Grid.Row="14" 
         Margin="0,0,0,10" 
         Padding="5" 
         BorderBrush="#CCCCCC" 
         BorderThickness="1" 
         Background="#FFFFFF"/>

            <TextBlock 
         Text="Улица:" 
         Grid.Row="15" 
         Margin="0,10,0,5" 
         VerticalAlignment="Center"/>
            <TextBox 
         Name="txtStreet" 
         Text="{Binding Street}"
         Grid.Row="16" 
         Margin="0,0,0,10" 
         Padding="5" 
         BorderBrush="#CCCCCC" 
         BorderThickness="1" 
         Background="#FFFFFF"/>

            <TextBlock 
         Text="Дом:" 
         Grid.Row="17" 
         Margin="0,10,0,5" 
         VerticalAlignment="Center"/>
            <TextBox 
         Name="txtHouseNumber" 
         Text="{Binding Home}"
         Grid.Row="18" 
         Margin="0,0,0,10" 
         Padding="5" 
         BorderBrush="#CCCCCC" 
         BorderThickness="1" 
         Background="#FFFFFF"/>

            <TextBlock 
         Text="Водительское удостоверение:" 
         Grid.Row="19" 
         Margin="0,10,0,5" 
         VerticalAlignment="Center"/>
            <StackPanel
         Orientation="Horizontal"
         Grid.Row="20" 
         Margin="0,0,0,10">
                <ComboBox 
             Name="cbDriverLicense" 
             SelectedValue="{Binding DriverLicense}"
             Width="400"
             Margin="0,0,10,0" 
             IsEditable="True" 
             IsTextSearchEnabled="True" />
                <Button 
             x:Name="btnAddLicense"
             Content="+" 
             Padding="10 0"
             Cursor="Hand" 
             Command="{Binding Add}"/>
            </StackPanel>

            <StackPanel 
         Orientation="Horizontal" 
         HorizontalAlignment="Right" 
         Grid.Row="21" 
         Margin="0,20,0,10">
                <Button 
             x:Name="btnSave"
             Content="Сохранить" 
             Width="auto"
             Padding="10 0"
             Cursor="Hand" 
             Margin="0,0,10,0"
             IsDefault="True"
             Click="btnSave_Click"/>
                <Button 
             Content="Отмена" 
             Width="100" 
             Height="35" 
             Cursor="Hand"
             IsCancel="True"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
