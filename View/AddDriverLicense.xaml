<Window x:Class="GIBDD.View.AddDriverLicense"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GIBDD.View"
        mc:Ignorable="d"
        FontSize="18"
        Title="Добавление водительского удостоверения" 
        Width="600" 
        SizeToContent="Height"
        ResizeMode="CanResize" 
        WindowStartupLocation="CenterScreen"
        Background="#F9F9F9">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Text="Добавление водительского удостоверения" 
            FontSize="24" 
            FontWeight="Bold" 
            HorizontalAlignment="Center" 
            Margin="0,10,0,20"/>

        <TextBlock 
            Text="Номер удостоверения:" 
            Grid.Row="1" 
            Margin="0,10,0,5" 
            VerticalAlignment="Center"/>
        <TextBox 
            Name="txtLicenseNumber" 
            Text="{Binding LicenseNumber}"
            Grid.Row="2" 
            Height="30" 
            Margin="0,0,0,10" 
            Padding="5" 
            BorderBrush="#CCCCCC" 
            BorderThickness="1" 
            Background="#FFFFFF"/>

        <TextBlock 
            Text="Орган, выдавший удостоверение:" 
            Grid.Row="3" 
            Margin="0,10,0,5" 
            VerticalAlignment="Center"/>
        <TextBox 
            Name="txtIssuedBy" 
            Text="{Binding IssuedBy}"
            Grid.Row="4" 
            Height="30" 
            Margin="0,0,0,10" 
            Padding="5" 
            BorderBrush="#CCCCCC" 
            BorderThickness="1" 
            Background="#FFFFFF"/>

        <TextBlock 
            Text="Дата выдачи:" 
            Grid.Row="5" 
            Margin="0,10,0,5" 
            VerticalAlignment="Center"/>
        <DatePicker 
            Name="dpDateOfIssue" 
            SelectedDate="{Binding DateOfIssue}"
            Grid.Row="6" 
            Margin="0,0,0,10" 
            BorderBrush="#CCCCCC" 
            BorderThickness="1" 
            Background="#FFFFFF"/>

        <TextBlock 
            Text="Категории:" 
            Grid.Row="7" 
            Margin="0,10,0,5" 
            VerticalAlignment="Center"/>
        <ListBox 
            Name="lbCategories" 
            Grid.Row="8" 
            SelectionMode="Multiple" 
            Height="100" 
            Margin="0,0,0,10" 
            BorderBrush="#CCCCCC" 
            BorderThickness="1" 
            Background="#FFFFFF"
            ItemsSource="{Binding Categories}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding Name}" IsChecked="{Binding Path=IsSelected, Mode=TwoWay}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Кнопки -->
        <StackPanel 
            Orientation="Horizontal" 
            HorizontalAlignment="Right" 
            Grid.Row="9" 
            Margin="0,20,0,10">
            <Button 
                x:Name="btnSave"
                Content="Сохранить" 
                Width="auto"
                Padding="10 0"
                Cursor="Hand" 
                IsDefault="True"
                Click="btnSave_Click" 
                Margin="0,0,10,0"/>
            <Button 
                x:Name="btnCancel"
                Content="Отмена" 
                IsCancel="True"
                Width="100" 
                Cursor="Hand" 
                Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
