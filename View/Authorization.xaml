<Window x:Class="GIBDD.View.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GIBDD.View"
        mc:Ignorable="d"
        Title="Авторизация" 
        Width="400" 
        SizeToContent="Height"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        Background="#F9F9F9"
        FontSize="18"
        d:FontSize="24">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock 
            Text="Вход в личный кабинет" 
            FontSize="24" 
            FontWeight="Bold" 
            HorizontalAlignment="Center" 
            Margin="0,20,0,20"/>

        <!-- Поле для ввода логина -->
        <TextBlock 
            Text="Логин:" 
            Grid.Row="1" 
            Margin="0,10,0,5" 
            VerticalAlignment="Center"/>
        <TextBox 
            Name="txtLogin" 
            Grid.Row="2" 
            Height="30" 
            Margin="0,0,0,10" 
            Padding="5" 
            BorderBrush="#CCCCCC" 
            BorderThickness="1" 
            Background="#FFFFFF"
            Text="{Binding Login}"/>
        <TextBlock 
            Text="{Binding LoginErrMsg}" 
            Grid.Row="3" 
            Margin="0,10,0,5" 
            VerticalAlignment="Center"
            FontSize="12"
            Foreground="Red"/>

        <!-- Поле для ввода пароля -->
        <TextBlock 
            Text="Пароль:" 
            Grid.Row="4" 
            Margin="0,10,0,5" 
            VerticalAlignment="Center"/>
        <PasswordBox 
            Name="txtPassword" 
            Grid.Row="5" 
            Height="30" 
            Margin="0,0,0,10" 
            Padding="5" 
            BorderBrush="#CCCCCC" 
            BorderThickness="1" 
            Background="#FFFFFF"/>
        <TextBlock 
            Text="{Binding PasswordErrMsg}" 
            Grid.Row="6" 
            Margin="0,10,0,5" 
            VerticalAlignment="Center"
            FontSize="12"
            Foreground="Red"/>
        <!-- Кнопка входа -->
        <Button 
            Content="Войти" 
            Grid.Row="7" 
            Width="100" 
            Height="35" 
            HorizontalAlignment="Right" 
            Margin="0,20,0,10" 
            Background="#0078D7" 
            Foreground="White" 
            FontWeight="Bold" 
            Cursor="Hand" 
            Click="Button_Click"/>
    </Grid>
</Window>
