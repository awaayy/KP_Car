<Window x:Class="GIBDD.View.AdminLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GIBDD.View"
        mc:Ignorable="d"
        Title="Авторизация администратора" 
        Width="400" 
        SizeToContent="Height"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterOwner"
        Background="#F9F9F9">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock 
            Text="Введите учетные данные администратора" 
            FontSize="18" 
            FontWeight="Bold" 
            HorizontalAlignment="Center" 
            Margin="0,10,0,20"/>

        <!-- Логин -->
        <TextBlock 
            Text="Логин:" 
            Grid.Row="1" 
            Margin="0,10,0,5" 
            VerticalAlignment="Center"/>
        <TextBox 
            Name="txtLogin" 
            Grid.Row="2" 
            Height="30" 
            Margin="0,0,0,10" 
            Padding="5" 
            BorderBrush="#CCCCCC" 
            BorderThickness="1" 
            Background="#FFFFFF"/>

        <!-- Пароль -->
        <TextBlock 
            Text="Пароль:" 
            Grid.Row="3" 
            Margin="0,10,0,5" 
            VerticalAlignment="Center"/>
        <PasswordBox 
            Name="txtPassword" 
            Grid.Row="4" 
            Height="30" 
            Margin="0,0,0,10" 
            Padding="5" 
            BorderBrush="#CCCCCC" 
            BorderThickness="1" 
            Background="#FFFFFF"/>

        <!-- Кнопка входа -->
        <Button 
            Content="Войти" 
            Grid.Row="5" 
            Width="100" 
            Height="35" 
            HorizontalAlignment="Right" 
            Margin="0,20,0,10" 
            Background="#0078D7" 
            Foreground="White" 
            FontWeight="Bold" 
            Cursor="Hand" 
            Click="BtnLogin_Click"/>
    </Grid>
</Window>
