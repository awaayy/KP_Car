<Window x:Class="GIBDD.View.UserCabinet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GIBDD.View"
        mc:Ignorable="d"
        Title="Личный кабинет" 
        FontSize="18"
        Width="800" 
        Height="600" 
        ResizeMode="CanResize" 
        WindowStartupLocation="CenterScreen"
        Background="#F9F9F9">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Заголовок -->
            <RowDefinition Height="Auto"/>
            <!-- Информация о пользователе -->
            <RowDefinition Height="*"/>
            <!-- Список автомобилей -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопки управления -->
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock 
            Text="Личный кабинет" 
            FontSize="24" 
            FontWeight="Bold" 
            HorizontalAlignment="Center" 
            Margin="0,10,0,20"/>

        <!-- Информация о пользователе -->
        <StackPanel 
            Orientation="Horizontal" 
            Grid.Row="1" 
            Margin="0,0,0,20">
            <Image 
                Source="/Images/UserCabinet.png" 
                Width="70" 
                Height="70" 
                Margin="0,0,10,0" 
                VerticalAlignment="Center"/>
            <StackPanel>
                <TextBlock 
                    Text="{Binding FullName}" 
                    FontSize="20" 
                    FontWeight="Bold"/>
                <TextBlock 
                    Text="{Binding Login}" 
                    FontSize="18"/>
            </StackPanel>
        </StackPanel>

        <!-- Список автомобилей -->
        <ListBox 
            Name="lstVehicles" 
            Grid.Row="2" 
            BorderThickness="1" 
            BorderBrush="#CCCCCC" 
            Background="White" 
            SelectionMode="Single" 
            ItemsSource="{Binding UserCars}"
            Margin="0,0,0,10" d:ItemsSource="{d:SampleData ItemCount=10}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image 
                            Source="{Binding ImageUrl}" 
                            Width="50" 
                            Height="50" 
                            Margin="0,0,10,0" 
                            VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock 
                                Text="{Binding RegistrationNumber}" 
                                FontSize="16" 
                                FontWeight="Bold"/>
                            <TextBlock 
                                Text="{Binding Number}" 
                                FontSize="14"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
